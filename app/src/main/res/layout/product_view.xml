<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:gravity="center_vertical"
            app:srcCompat="@android:color/holo_green_light"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp" />

        <TextView
            android:id="@+id/originalPrice"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:typeface="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/discout"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/originalPrice"
            android:layout_alignLeft="@+id/originalPrice"
            android:layout_alignRight="@+id/originalPrice"
            android:layout_alignStart="@+id/originalPrice"
            android:layout_below="@+id/originalPrice"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:typeface="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/discout"
            android:layout_alignLeft="@+id/discout"
            android:layout_alignRight="@+id/discout"
            android:layout_alignStart="@+id/discout"
            android:layout_below="@+id/discout"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:typeface="normal"
            android:visibility="visible" />
    </RelativeLayout>
</layout>
